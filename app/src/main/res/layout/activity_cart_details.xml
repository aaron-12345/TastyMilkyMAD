<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardDetails">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Card Details"
        android:textSize="40dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/UserNameBox"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="name"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/CartNUmber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart Number"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="332dp" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/CartNUmber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="Cart Number"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="406dp" />

    <EditText
        android:id="@+id/CartNameBox"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cart Name"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/CartNumbetBox"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cart Number"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="428dp" />

    <TextView
        android:id="@+id/EXdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="Ex Date"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="489dp" />

    <EditText
        android:id="@+id/CartNumbetBox1"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cart Number"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="354dp" />

    <TextView
        android:id="@+id/CVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C V C"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="489dp" />

    <EditText
        android:id="@+id/d2"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/CVC"
        tools:layout_editor_absoluteX="226dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/EXdate"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/CartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart Name"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="255dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="EndPay"
        android:text="Done"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d2" />


</androidx.constraintlayout.widget.ConstraintLayout>